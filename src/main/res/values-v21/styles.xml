<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">     <!-- customize the color palette -->
    <item name="colorPrimary">@color/colorPrimary </item>             <!-- 对应ActionBar的颜色-->

    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>      <!-- 对应状态栏的颜色-->

    <item name="colorAccent">@color/colorAccent</item>                <!-- 对应控件被选中的颜色-->

    <item name="windowActionBar">false</item>                                  <!-- 去掉系统actionbar   这里和parent 中.noActionBar是一样的效果-->

    <item name="android:windowNoTitle">true</item>                             <!-- 去掉系统actionbar-->

    <item name="android:windowTranslucentNavigation">true</item>               <!-- 修改系统下面的navBar颜色和tab颜色一样 1-->
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>            <!-- 修改系统下面的navBar颜色和tab颜色一样 1-->

    <item name="android:textColorPrimary">@android:color/white</item>           <!-- 现在toolbar标题为黑色，改为白色-->

    <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.ZhiHu</item>

  </style>

  <style name="ActionButton.Overflow.ZhiHu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
    <item name="android:src">@drawable/menu_setting</item>
  </style>
</resources>
